{
  "compilerOptions": {
    /* === Core Settings === */
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Path Aliases === */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* === TS Features === */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",

    /* === Debugging === */
    "sourceMap": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
